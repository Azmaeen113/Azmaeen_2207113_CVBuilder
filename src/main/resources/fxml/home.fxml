<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cvbuilder.controllers.HomeController">
    <style>
        <![CDATA[
            .root {
                -fx-font-family: "Segoe UI", "Arial", sans-serif;
                -fx-background-color: #f5f5f5;
            }
            
            #headerPane {
                -fx-background-color: #2c3e50;
                -fx-padding: 20;
            }
            
            #titleLabel {
                -fx-text-fill: white;
                -fx-font-size: 32;
                -fx-font-weight: bold;
            }
            
            #subtitleLabel {
                -fx-text-fill: #ecf0f1;
                -fx-font-size: 14;
            }
            
            #mainContent {
                -fx-alignment: center;
                -fx-padding: 60;
                -fx-spacing: 20;
            }
            
            #welcomeLabel {
                -fx-font-size: 28;
                -fx-text-fill: #2c3e50;
                -fx-font-weight: bold;
                -fx-text-alignment: center;
            }
            
            #descriptionLabel {
                -fx-font-size: 14;
                -fx-text-fill: #555555;
                -fx-text-alignment: center;
                -fx-wrap-text: true;
            }
            
            #createButton {
                -fx-padding: 12 40 12 40;
                -fx-font-size: 14;
                -fx-font-weight: bold;
                -fx-background-color: #3498db;
                -fx-text-fill: white;
                -fx-border-radius: 5;
                -fx-background-radius: 5;
                -fx-cursor: hand;
            }
            
            #createButton:hover {
                -fx-background-color: #2980b9;
            }
            
            #createButton:pressed {
                -fx-background-color: #1f618d;
            }
        ]]>
    </style>
    
    <top>
        <VBox fx:id="headerPane" prefHeight="80">
            <Label fx:id="titleLabel" text="CV Builder"/>
            <Label fx:id="subtitleLabel" text="Create your professional curriculum vitae"/>
        </VBox>
    </top>
    
    <center>
        <VBox fx:id="mainContent">
            <Label fx:id="welcomeLabel" text="Welcome to CV Builder"/>
            <Label fx:id="descriptionLabel" text="Create a professional Curriculum Vitae with just a few clicks. Our intuitive form will guide you through entering your personal information, education, work experience, and projects."/>
            <Button fx:id="createButton" text="Create New CV" onAction="#onCreateNewCV"/>
        </VBox>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cvbuilder.controllers.PreviewController">
    <style>
        <![CDATA[
            .root {
                -fx-font-family: "Segoe UI", "Arial", sans-serif;
                -fx-background-color: #f5f5f5;
            }
            
            #headerPane {
                -fx-background-color: #2c3e50;
                -fx-padding: 15;
            }
            
            #titleLabel {
                -fx-text-fill: white;
                -fx-font-size: 24;
                -fx-font-weight: bold;
            }
            
            #buttonPane {
                -fx-padding: 15;
                -fx-spacing: 10;
                -fx-alignment: center;
                -fx-background-color: #ecf0f1;
            }
            
            #backButton, #saveButton {
                -fx-padding: 10 30 10 30;
                -fx-font-size: 12;
                -fx-font-weight: bold;
                -fx-border-radius: 3;
                -fx-background-radius: 3;
                -fx-cursor: hand;
            }
            
            #backButton {
                -fx-background-color: #95a5a6;
                -fx-text-fill: white;
            }
            
            #backButton:hover {
                -fx-background-color: #7f8c8d;
            }
            
            #saveButton {
                -fx-background-color: #27ae60;
                -fx-text-fill: white;
            }
            
            #saveButton:hover {
                -fx-background-color: #229954;
            }
        ]]>
    </style>
    
    <top>
        <VBox fx:id="headerPane">
            <Label fx:id="titleLabel" text="CV Preview"/>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="cvContent" spacing="15" style="-fx-padding: 40; -fx-background-color: white;" />
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox fx:id="buttonPane">
            <Button fx:id="backButton" text="â† Edit CV" onAction="#onBackToEdit"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="saveButton" text="Save CV" onAction="#onSaveCV"/>
        </HBox>
    </bottom>
</BorderPane>

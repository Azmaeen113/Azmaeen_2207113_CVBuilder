<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cvbuilder.controllers.DataEntryController">
    <style>
        <![CDATA[
            .root {
                -fx-font-family: "Segoe UI", "Arial", sans-serif;
                -fx-background-color: #f5f5f5;
            }
            
            #headerPane {
                -fx-background-color: #2c3e50;
                -fx-padding: 20;
            }
            
            #titleLabel {
                -fx-text-fill: white;
                -fx-font-size: 28;
                -fx-font-weight: bold;
            }
            
            .section-title {
                -fx-text-fill: #2c3e50;
                -fx-font-size: 16;
                -fx-font-weight: bold;
                -fx-padding: 10 0 5 0;
            }
            
            .form-label {
                -fx-text-fill: #333333;
                -fx-font-size: 12;
                -fx-font-weight: bold;
            }
            
            .text-input, .text-area {
                -fx-font-size: 11;
                -fx-padding: 8;
                -fx-border-color: #bdc3c7;
                -fx-border-radius: 3;
                -fx-background-radius: 3;
            }
            
            .text-input:focused, .text-area:focused {
                -fx-border-color: #3498db;
                -fx-border-width: 2;
            }
            
            .error-label {
                -fx-text-fill: #e74c3c;
                -fx-font-size: 11;
            }
            
            #buttonPane {
                -fx-padding: 20;
                -fx-spacing: 10;
                -fx-alignment: center;
            }
            
            #backButton, #generateButton {
                -fx-padding: 10 30 10 30;
                -fx-font-size: 12;
                -fx-font-weight: bold;
                -fx-border-radius: 3;
                -fx-background-radius: 3;
                -fx-cursor: hand;
            }
            
            #backButton {
                -fx-background-color: #95a5a6;
                -fx-text-fill: white;
            }
            
            #backButton:hover {
                -fx-background-color: #7f8c8d;
            }
            
            #generateButton {
                -fx-background-color: #27ae60;
                -fx-text-fill: white;
            }
            
            #generateButton:hover {
                -fx-background-color: #229954;
            }
            
            #addButton, #removeButton {
                -fx-padding: 6 15 6 15;
                -fx-font-size: 11;
                -fx-background-radius: 3;
                -fx-cursor: hand;
            }
            
            #addButton {
                -fx-background-color: #3498db;
                -fx-text-fill: white;
            }
            
            #addButton:hover {
                -fx-background-color: #2980b9;
            }
            
            #removeButton {
                -fx-background-color: #e74c3c;
                -fx-text-fill: white;
            }
            
            #removeButton:hover {
                -fx-background-color: #c0392b;
            }
            
            .separator {
                -fx-padding: 10 0 10 0;
            }
        ]]>
    </style>
    
    <top>
        <VBox fx:id="headerPane">
            <Label fx:id="titleLabel" text="CV Data Entry Form"/>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="formContainer" spacing="15" style="-fx-padding: 20;">
                
                <!-- Personal Information Section -->
                <Label text="Personal Information" styleClass="section-title"/>
                <GridPane hgap="10" vgap="10">
                    <Label text="Full Name *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS"/>
                    
                    <Label text="Email Address *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" HBox.hgrow="ALWAYS"/>
                    
                    <Label text="Phone Number *" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" HBox.hgrow="ALWAYS"/>
                    
                    <Label text="Address" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextArea fx:id="addressArea" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" HBox.hgrow="ALWAYS"/>
                    
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>
                
                <Separator styleClass="separator"/>
                
                <!-- Education Section -->
                <Label text="Educational Qualifications" styleClass="section-title"/>
                <VBox fx:id="educationContainer" spacing="10"/>
                <Button fx:id="addEducationBtn" text="+ Add Education" onAction="#onAddEducation"/>
                
                <Separator styleClass="separator"/>
                
                <!-- Skills Section -->
                <Label text="Skills" styleClass="section-title"/>
                <HBox spacing="5">
                    <TextField fx:id="skillInput" promptText="Enter a skill and press Add" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="addSkillBtn" text="Add Skill" onAction="#onAddSkill"/>
                </HBox>
                <VBox fx:id="skillsContainer" spacing="5"/>
                
                <Separator styleClass="separator"/>
                
                <!-- Work Experience Section -->
                <Label text="Work Experience" styleClass="section-title"/>
                <VBox fx:id="workExperienceContainer" spacing="10"/>
                <Button fx:id="addWorkExpBtn" text="+ Add Work Experience" onAction="#onAddWorkExperience"/>
                
                <Separator styleClass="separator"/>
                
                <!-- Projects Section -->
                <Label text="Projects" styleClass="section-title"/>
                <VBox fx:id="projectsContainer" spacing="10"/>
                <Button fx:id="addProjectBtn" text="+ Add Project" onAction="#onAddProject"/>
                
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox fx:id="buttonPane">
            <Button fx:id="backButton" text="← Back to Home" onAction="#onBackToHome"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="generateButton" text="Generate CV →" onAction="#onGenerateCV"/>
        </HBox>
    </bottom>
</BorderPane>
